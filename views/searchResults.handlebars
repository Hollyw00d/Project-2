{{>header}}
<main>
    <div id="resultsHolder">
        {{#each searchResults}}
        <div class="row">
            <div class="col-4">
                <img src="{{this.itemImage}}">
            </div>
            <div class="col-8">
                <h2>{{this.itemName}}</h2>
            </div>
        </div>
        {{/each}}
    </div>
    <div id="categorySearch"></div>

    <h3>View by Category Instead</h3>
    {{>categorySelect}}
    {{>requestModal}}
</main>
{{>footer}}

