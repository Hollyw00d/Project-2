<div class="container">
    <header class="row">
        <div class="col-2 offset-1">
            <img src="../public/images/logo-desktop.png">
        </div>
        <div class="col-1 offset-2">
            <button class="btn btn-light">Login</button>
        </div>
        <div class="col-1">
            <button class="btn btn-primary">Sign Up</button>
        </div>
        <div class="col-1 offset-4">
            <i class="fas fa-bars"></i>
        </div>
    </header>
    <div class="row">
        <div class="col-12 text-white text-center" id="handshake">
            <h1>Borrow from friends.</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h3>{{items.length}} Borrowed Item{{#if items.length "-" 1}}s{{/if}} Near You</h3>
            <h2>Your Location: <span class="text-success">{{location}}</span></h2>
        </div>
    </div>
    <hr>
    {{#each items}}
    <div class="row">
        <div class="col-4">
            <img src="{{this.image}}">
        </div>
        <div class="col-8">
            <h2>{{this.name}}</h2>
        </div>
    </div>
    {{/each}}
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>